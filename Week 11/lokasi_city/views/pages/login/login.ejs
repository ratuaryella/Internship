<% layout('layout') %>
<div class="container-login">
    <div class="column-login">
        <div class="img-medan-city"></div>
        <div class="card-login">
            <div class="card-body-login">
                <div class="intro-login">
                    <span class="icon-user-login"><i class="fas fa-user-alt" style="font-size: 50px; color: #1E56BA;"></i></span>
                    <h2>Silahkan Masuk</h2>
                </div>
                <form method="POST" action="/login">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="floatingInputEmail" placeholder="bvt@gmail.com">
                        <label for="floatingInputEmail">Email address</label>
                    </div>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                    </div>
                    <div class="d-grid mt-20">
                        <button class="btn btn-primary" type="button">Login</button>
                      </div>
                </form>
            </div>
        </div>
    </div>
</div>